name: Terraform Apply

on:
  push:
    branches:
    - main
  pull_request:
    branches:
    - main


jobs:
  terraform_apply:


    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3

      - name: terraform apply
        uses: ./.github/terraform
        permissions:
          contents: read
          pull-requests: write
        with:
          hello: "world mykola"
          terraform_directory: "./Backend/dev"
          github_token: ${{ secrets.GH_TOKEN }}
